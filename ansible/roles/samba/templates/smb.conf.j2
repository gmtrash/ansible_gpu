[global]
   workgroup = WORKGROUP
   server string = Forge Neo GPU Server
   security = user
   map to guest = Bad User
   dns proxy = no

   # Performance tuning
   socket options = TCP_NODELAY IPTOS_LOWDELAY SO_RCVBUF=131072 SO_SNDBUF=131072
   read raw = yes
   write raw = yes
   max xmit = 65535
   dead time = 15
   getwd cache = yes

   # Logging
   log file = /var/log/samba/log.%m
   max log size = 1000
   logging = file

[forge-neo]
   comment = Forge Neo - Stable Diffusion (models, outputs, logs)
   path = {{ forge_install_dir }}/app
   browseable = yes
   writable = yes
   guest ok = no
   valid users = {{ ansible_user }}
   create mask = 0644
   directory mask = 0755
   force user = {{ ansible_user }}
   force group = {{ ansible_user }}
